# Azure API Configuration
NEXT_PUBLIC_AZURE_API_VERSION=2023-01-01-preview
NEXT_PUBLIC_API_BASE_URL=https://prices.azure.com/api/retail/prices

# Rate Limiting Configuration
# Maximum number of requests per time window
NEXT_PUBLIC_API_RATE_LIMIT_REQUESTS=3
# Time window in milliseconds (60000 = 1 minute)
NEXT_PUBLIC_API_RATE_LIMIT_WINDOW=60000

# Cache Configuration
# Cache TTL in milliseconds (3600000 = 1 hour)
NEXT_PUBLIC_CACHE_TTL=3600000

# Application Configuration
NEXT_PUBLIC_APP_NAME=Azure Cost Calculator
NEXT_PUBLIC_DEFAULT_REGION=canadacentral

# Batch Processing Configuration
# Number of servers to process in each batch
NEXT_PUBLIC_CALCULATION_BATCH_SIZE=2
# Delay between individual calculations within a batch (milliseconds)
NEXT_PUBLIC_INDIVIDUAL_CALCULATION_DELAY=500
# Base delay between batches (milliseconds)
NEXT_PUBLIC_BATCH_BASE_DELAY=2000
# Increment delay for each subsequent batch (milliseconds)
NEXT_PUBLIC_BATCH_DELAY_INCREMENT=500
# Maximum delay between batches (milliseconds)
NEXT_PUBLIC_BATCH_MAX_DELAY=5000

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# For development (default if not set): allows all origins (*)
# For production: specify your domain(s)
# Examples:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# CORS_ALLOWED_ORIGINS=https://azure-calculator.yourdomain.com
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOWED_ORIGINS=* 